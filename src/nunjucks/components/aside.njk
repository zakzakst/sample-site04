{% set ASIDE_ITEMS = [
  {
    heading: '製品情報',
    links: [
      { link: '#', label: '製品情報トップ' },
      { link: '#', label: '製品詳細' },
      { link: '#', label: '導入のご相談' },
      { link: '#', label: '導入事例' }
    ]
  },
  {
    heading: 'お知らせ',
    links: [
      { link: '#', label: 'ニュースリリーストップ' },
      { link: '#', label: '月別アーカイブ' }
    ]
  },
  {
    heading: '会社情報',
    links: [
      { link: '#', label: '会社情報トップ' },
      { link: '#', label: '企業概要' },
      { link: '#', label: '社長挨拶' },
      { link: '#', label: '事業案内' },
      { link: '#', label: 'アクセスマップ' }
    ]
  }
] %}

<!-- ▼▼▼ サイドバー ▼▼▼ -->
<aside>
  <div class="control has-icons-right">
    <input class="input" type="text" placeholder="キーワードを入力">
    <span class="icon is-small is-right">
      <i class="fas fa-search"></i>
    </span>
  </div>

  <div class="mt-4">
    {% for ITEM in ASIDE_ITEMS %}
      <nav class="panel">
        <p class="panel-heading">{{ ITEM.heading }}</p>
        {% for LINK in ITEM.links %}
          <a href="{{ LINK.link }}" class="panel-block">{{ LINK.label }}</a>
        {% endfor %}
      </nav>
    {% endfor %}
  </div>
</aside>
